FORTRAN_DEBUG        = -hdevelop -hfp0 -K trap=fp
FORTRAN_OPTIMIZE     = -Oipa2 #-- Default optimization (O2) but with lower ipa
                              #   level (defaupt ipa3 causes issue)
FORTRAN_PROFILE      = 

