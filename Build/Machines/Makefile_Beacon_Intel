FORTRAN_COMPILE      = mpiifort -c -qopenmp
FORTRAN_BOUND_CHECK  = -CB
FORTRAN_DEBUG        = -g -warn all -fpe0 -fpe-all=0 -ftrapuv -traceback
FORTRAN_OPTIMIZE     = -O2
FORTRAN_PROFILE      = 

LINK = mpiifort -qopenmp

#-- use "module load fftw"
INCLUDE_FFTW = ${FFTW_INC}
LIBRARY_FFTW = ${FFTW_DIR}

#-- use "module load silo" will be set up properly at some point
INCLUDE_SILO = ${SILO_INC}
