SineWave: Basics.a Mathematics.a Fluid.a SineWave.o
	$(LINK) $(FFLAGS) \
          -o SineWave_$(MACHINE) \
          SineWave.o SineWave_Form.o PlaneWave_Template.o \
          Fluid.a Mathematics.a Basics.a $(THIRD_PARTY) $(LIBRARIES)

