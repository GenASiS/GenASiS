  Interactions_F__Form.o \
  Interactions_ASC__Form.o \
  Interactions_BSLL_ASC_CSLD__Form.f90

SpectralMoments.a: $(SPECTRAL_MOMENTS)
	ar r SpectralMoments.a $(SPECTRAL_MOMENTS)

