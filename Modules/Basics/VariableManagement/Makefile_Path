PATH_ARRAY_ARRAYS     = $(PATH_VARIABLE_MANAGEMENT)/ArrayArrays
PATH_STORAGES         = $(PATH_VARIABLE_MANAGEMENT)/Storages

VPATH_VARIABLE_MANAGEMENT = \
  $(PATH_SPECIFIERS):\
  $(PATH_DEVICES):\
  $(PATH_ARRAY_OPERATIONS):\
  $(PATH_ARRAY_ARRAYS):\
  $(PATH_STORAGES):\
  $(PATH_VARIABLE_MANAGEMENT)
